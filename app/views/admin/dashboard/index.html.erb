    },
    {
      fillColor : "#f14f4f",
      strokeColor : "#f14f4f",
      data : <%= raw rejected_school %>
    }
  ]
}

var ChartTwo = new Chart(document.getElementById("canvas2").getContext("2d")).Bar(dataTwo, Maximize(<%= raw accepted_school %>, <%= raw rejected_school %>));


