<div class="row">
  <div class="twelve columns">
    <div class="wrapper light">
      <div class="row">
        <h2 class="centalign">Admin Dashboard</h2>
        <section class="tabs" id="tabs">
          <div class="row">
            <div class="twelve columns centered centalign">
              <ul class="tab-nav">
                  <li id="grants" onClick="setCookie('tabval',this.id,1)"><a href="#">Grants</a></li>
                  <li id="donors" onClick="setCookie('tabval',this.id,1)"><a href="#">Donors</a></li>
                  <li id="recipients" onClick="setCookie('tabval',this.id,1)"><a href="#">Recipients</a></li>
