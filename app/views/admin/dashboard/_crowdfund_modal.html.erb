<div class="modal" id="crowdfund-form">
  <div class="content">
    <a class="close switch close-crowdfund-modal" gumby-trigger="|#crowdfund-form"><i class="icon-cancel" /></i></a>
    <div class="row">
      <div class="ten columns centered text-center">
        <% if grant %>
          <p>Create Crowdfund for <%= grant.title %></p>
          <%= form_tag(crowdfund_create_path, method: :post) do %>
            <div class="field">
              <%= label_tag :goal, "Goal" %>
              <%= text_field_tag :goal, nil, name: nil %>
            </div>
            <div class="field">
              <%# <%= label_tag :deadline, "Deadline" %1> %>
              <%# <%= select_day :day, {id: "deadline_day"} %1> %>
              <%# <%= select_month :month, {add_month_numbers: true}, {name: nil, id: "deadline_month"} %1> %>
              <%# <%= select_year :year, {start_year: Date.today.year, end_year: Date.today.year+5}, {name: nil, id: "deadline_year"} %1> %>
            </div>
            <%= hidden_field_tag :grant_id, @grant.id %>
          <% end %>
        <% else %>
          GRANT NOT DEFINED
        <% end %>
        <p class="btn primary medium">
          <a href="#" class="switch close-crowdfund-modal" gumby-trigger="|#crowdfund-form" close-crowdfund-modal">Close</a>
        </p>
      </div>
    </div>
  </div>
</div>

