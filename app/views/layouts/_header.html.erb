<div class="trunkheader">     <!--  Add "slideRight" class to items that move right when viewing Nav Drawer  -->
  <span>
    <a href="http://www.berkeleypublicschoolsfund.org" class="homelogo poofout"><img src="/assets/logowtext.png" /></a>
    <a href="http://www.berkeleypublicschoolsfund.org" class="homelogo poofin"><img src="/assets/logo.png"/></a>
  </span>

  <div class="trunknav">
    <ul>
      <li><%= link_to 'Browse'.html_safe, root_path %></li>
      <%= render 'layouts/search_form' %>
    </ul>
  </div>

  <% if user_signed_in? %>
    <div class="loginmenu pull_right">
      <a href="#" class="toggle" gumby-trigger="#userdropdown" gumby-classname="nodisplay"><span class="poofout">Hello, <%= current_user.first_name %></span><span class="poofin"><i class="icon-user"></i></span><i class="icon-down-open-mini"></i></a>
    </div>
  <% else %>
  <div class="loginmenu pull_right">
    <span class="poofout"><%= link_to "Sign Up", new_user_session_path %>  |</span>  <%= link_to "Sign In", new_user_session_path %>
  </div>
  <% end %>
</div>


<% if user_signed_in? %>
  <div class="userdropdown nodisplay" id="userdropdown">
    <ul>
      <li><%= link_to "Account", user_path(id: current_user.id) %></li>
      <% if admin_user? %>
        <li><%= link_to 'Dashboard'.html_safe, admin_dashboard_path %></li>
      <% elsif recipient? %>
        <li><%= link_to 'Dashboard'.html_safe, recipient_dashboard_path %></li>
      <% else %>
      <% end %>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    </ul>
  </div>
<% else %>
<% end %>

