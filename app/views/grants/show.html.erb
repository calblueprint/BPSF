<div class="row">
  <h1><%= @grant.title %></h1>
</div>

<div class="row">
  <h3>Summary</h3>
  <%= @grant.summary %>
</div>

<div class="row">
  <h3>Video</h3>
  <% if !@grant.video.blank? %>
    <iframe width="560" height="315" src= "http://www.youtube.com/embed/<%= parse_embed(@grant) %>"></iframe>
  <% end %>
</div>

<div class="row">
  <h3>Subject areas</h3>
  <%= @grant.subject_areas %>
</div>

<div class="row">
  <h3>Grade level: <%= @grant.grade_level %></h3>
</div>

<div class="row">
  <h3>Duration</h3>
  <%= @grant.duration %>
</div>

<div class="row">
  <h3>Number of classes: <%= @grant.num_classes %></h3>
</div>

<div class="row">
  <h3>Number of students: <%= @grant.num_students %></h3>
</div>

<div class="row">
  <h3>Total budget: <%= @grant.total_budget %></h3>
</div>

<div class="row">
  <h3>Requested funds: <%= @grant.requested_funds %></h3>
</div>

<div class="row">
  <h3>Funds will pay for:</h3>
  <%= @grant.funds_will_pay_for %>
</div>

<div class="row">
  <h3>Budget description</h3>
  <%= @grant.budget_desc %>
</div>

<div class="row">
  <h3>Purpose</h3>
  <%= @grant.purpose %>
</div>

<div class="row">
  <h3>Methods</h3>
  <%= @grant.methods %>
</div>

<div class="row">
  <h3>Teacher background</h3>
  <%= @grant.background %>
</div>

<div class="row">
  <h3>Num. collaborators: <%= @grant.n_collaborators %></h3>
</div>

<div class="row">
  <h3>Collaborators</h3>
  <%= @grant.collaborators %>
</div>

<div class="row">
  <h3>Comments</h3>
  <%= @grant.comments %>
</div>