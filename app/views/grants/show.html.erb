<div class="row">
  <div class="wrapper light">
    <div class="row">
      <h2>
        <%= @grant.title %>
        <% if current_user.type == 'Admin' %>
          <span class="ttip" data-tooltip="Edit">
            <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_grant_path %>
          </span>
        <% end %>
      </h2>
    </div>

    <div class="row">
      <h3>Summary</h3>
      <%= @grant.summary %>
    </div>

    <div class="row">
      <h3>Image</h3>
      <% if @grant.image_url %>
        <%= image_tag @grant.image_url.to_s %>
      <% end %>
    </div>

    <div class="row">
      <h3>Video</h3>
      <% if !@grant.video.blank? %>
        <iframe width="560" height="315" src= "http://www.youtube.com/embed/<%= parse_embed(@grant) %>"></iframe>
      <% end %>
    </div>

    <div class="row">
      <h3>Subject areas</h3>
      <%= @grant.subject_areas %>
    </div>

    <div class="row">
      <h3>Grade level: <%= @grant.grade_level %></h3>
    </div>

    <div class="row">
      <h3>Duration</h3>
      <%= @grant.duration %>
    </div>

    <div class="row">
      <h3>Number of classes: <%= @grant.num_classes %></h3>
    </div>

    <div class="row">
      <h3>Number of students: <%= @grant.num_students %></h3>
    </div>

    <div class="row">
      <h3>Total budget: <%= @grant.total_budget %></h3>
    </div>

    <div class="row">
      <h3>Requested funds: <%= @grant.requested_funds %></h3>
    </div>

    <div class="row">
      <h3>Funds will pay for:</h3>
      <%= @grant.funds_will_pay_for %>
    </div>

    <div class="row">
      <h3>Budget description</h3>
      <%= @grant.budget_desc %>
    </div>

    <div class="row">
      <h3>Purpose</h3>
      <%= @grant.purpose %>
    </div>

    <div class="row">
      <h3>Methods</h3>
      <%= @grant.methods %>
    </div>

    <div class="row">
      <h3>Teacher background</h3>
      <%= @grant.background %>
    </div>

    <div class="row">
      <h3>Num. collaborators: <%= @grant.n_collaborators %></h3>
    </div>

    <div class="row">
      <h3>Collaborators</h3>
      <%= @grant.collaborators %>
    </div>

    <div class="row">
      <h3>Comments</h3>
      <%= @grant.comments %>
    </div>


    <% if @grant.crowdfunding? %>
      <div class="row">
        <%= form_for @payment do |f| %>
          <% if @payment.errors.any? %>
            <div class="error-messages">
              <h2><%= plurlalize(@payment.errors.count, "error") %> prohibited this donation from being processed:</h2>
              <ul>
                <% @payment.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <%= hidden_field_tag :grant_id, @grant.id %>

          <%= hidden_field_tag :stripe_token %>

          <div class="field">
            <%= label_tag :amount, "Donation Total" %>
            <%= text_field_tag :amount, nil, class: :input %>
          </div>

          <% if current_user && current_user.stripe_token.present? %>
            Credit card has already been provided.
          <% else %>
            <div class="field">
              <%= label_tag :card_number, "Credit Card Number" %>
              <%= text_field_tag :card_number, nil, name: nil, class: :input %>
            </div>
            <div class="field">
              <%= label_tag :card_code, "Card Security Code" %>
              <%= text_field_tag :card_code, nil, name: nil, class: :input %>
            </div>
            <div class="field">
              <%= label_tag :card_month, "Card Expiration" %>
              <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
              <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
            </div>
          <% end %>
          <div id="stripe_error">
            <noscript>Javscript is required. Please enable it in your browser settings.</noscript>
          </div>
          <div class="donate medium primary btn">
            <%= f.submit "Donate!", :id => "new_payment" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
