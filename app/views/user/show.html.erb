<div class="row">
  <div class="wrapper light">
    <div class="row">
        <h2><%= @user.first_name %> <%= @user.last_name %> </h2>
    </div>

    <div class="row">
      <h4>Email</h4>
      <%= @user.email %>
    </div>

    <table>
      <thead>
        <tr>
          <th>Recipient</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
          <% @pledges.each do |pledge| %>
            <tr>
              <th><%= pledge.crowdfund_id %></th>
              <th><%= pledge.amount %></th>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
