<div class="row">
  <div class="wrapper light">
    <div class="row">
        <h2><%= @user.first_name %> <%= @user.last_name %> </h2>
    </div>

    <div class="row">
      <h4>Email</h4>
      <%= @user.email %>
    </div>

    <% if @user.is_a?(Recipient) %>
      <%= render partial: "recipient_profile", locals: { recipient: @user } %>
    <% elsif @user.is_a?(SuperUser) or @user.is_a?(Admin) %>
      <%= render partial: "admin_profile", locals: { admin: @user } %>
    <% elsif @user.is_a?(User) %>
      <%= render partial: "user_profile", locals: { user: @user } %>
    <% end %>
  </div>
</div>
<%= debug @payments %>
