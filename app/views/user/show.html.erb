<div class="row">
  <div class="wrapper light">
    <div class="row">
      <h2 style="inlined">
        <%= @user.first_name %> <%= @user.last_name %>
      </h2>
      <% if @user.eql? current_user %>
        <span class="ttip pull_right inlined" data-tooltip="Edit">
          <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_user_path(id: @user.id) %>
        </span>
      <% end %>
    </div>

    <div class="row">
      <h4 class="inlined">Email</h4>
      <%= @user.email %>
    </div>

    <% if @user.type == "Recipient" %>
      <%= render partial: "recipient_profile", locals: { recipient: @user, profile: @profile } %>
    <% elsif @user.type == 'SuperUser' or @user.type == 'Admin' %>
      <%= render partial: "admin_profile", locals: { admin: @user, profile: @profile } %>
    <% elsif @user.type == 'User' %>
      <%= render partial: "user_profile", locals: { user: @user } %>
    <% end %>
  </div>
</div>
<%= debug @payments %>
