
<div class="row">
  <% if profile.image_url %>
    <%= image_tag profile.image_url.to_s %>
  <% end %>
</div>

<div class="row">
  <% if profile.school_id %>
    <h5 class="inlined">School: </h5><%= School.find(profile.school_id).name %> <br>
  <% end %>
</div>

<div class="row">
  <% if profile.started_teaching %>
    <h5 class="inlined">Years of Experience:</h5>
    <%= profile.years_teaching %>
  <% end %>
</div>

<div class="row">
  <% if profile.grade %>
    <h5 class="inlined">Grade Level(s):</h5>
    <%= profile.grade %>
  <% end %>
</div>

<div class="row">
  <h5 class="inlined">Subject(s):</h5>
  <%= profile.subject %><br>
</div>

<div class="row">
  <% if profile.about %>
  <h5>About</h5>
    <%= profile.about %>
  <% end %>
</div>

<div class="row">
  <% if profile.address %>
    <h5>Address</h5>
    <%= profile.address %>, <%= profile.city %> <%= profile.zipcode %>
  <% end %>
</div>

<div class="row">
  <% if profile.work_phone %>
    <h5>Work Phone</h5>
    <%= profile.work_phone %>
  <% end %>
</div>

<div class="row">
  <% if profile.home_phone %>
    <h5>Home Phone</h5>
    <%= profile.home_phone %>
  <% end %>
</div>

<br>
<div class="primary btn">
  <%= link_to "Update Credit Card Info", update_credit_card_info_path %>
</div>
