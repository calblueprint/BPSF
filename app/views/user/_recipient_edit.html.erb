<div class="row">
  <div class="twelve columns">
    <div class="wrapper light">
      <div class="row">
        <h2>Update Your Profile</h2>
      </div>
      <div class="row">
        <div class="twelve columns">
          <%= form_for @profile, url: recipient_profile_path(id: @profile.id) do |f| %>
            <div class="field">
              <%= f.label :about, "About" %>
              <%= f.text_field :about, class: [:textarea, :input], rows: 3 %>
            </div>
            <div class="medium primary btn pull_right">
              <%= f.submit "Save!" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
